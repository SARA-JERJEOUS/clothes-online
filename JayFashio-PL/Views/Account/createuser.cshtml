

@model  JayFashio_M.User

<!DOCTYPE html>
<html>
<head>
    <title>Login_JayFashio </title>
    <link href="~/stt.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Architects+Daughter&family=Comforter&family=Lobster&family=Pacifico&family=Permanent+Marker&family=Press+Start+2P&family=Righteous&display=swap" rel="stylesheet">
