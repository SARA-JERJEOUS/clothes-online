    <style>
        .sty {
            border: dashed 6px orange;
            max-width: 30%;
            height: 414px;
            margin-left: 31%;
        }

        .centerf {
            position: relative;
            bottom: -29px;
        }

        row {
            margin-top: 75px;
        }

        .f1 {
            color: #947622;
            font-family: 'Architects Daughter', cursive;
            margin-left: 30px;
            margin-right: 9px;
            margin-top: 10px;
            font-size: 16.2px
        }

        .f2 {
            color: #947622;
            font-family: 'Architects Daughter', cursive;
            margin-left: 30px;
            margin-right: 23px;
            margin-top: 10px;
            font-size: 16.2px
        }

        .f3 {
            color: #947622;
            font-family: 'Architects Daughter', cursive;
            margin-left: 30px;
            margin-right: 12px;
            margin-top: 10px;
            font-size: 16.2px
        }

        .f4 {
            color: #947622;
            font-family: 'Architects Daughter', cursive;
            margin-left: 30px;
            margin-right: 48px;
            margin-top: 10px;
            font-size: 16.2px
        }

        .f5 {
            color: #947622;
            font-family: 'Architects Daughter', cursive;
            margin-left: 30px;
            margin-right: 12px;
            margin-top: 10px;
            font-size: 16.2px
        }

        .f6 {
            color: #947622;
            font-family: 'Architects Daughter', cursive;
            margin-left: 30px;
            margin-right: 50px;
            margin-top: 10px;
            font-size: 16.2px
        }

        .sub {
            padding-left: 30px;
            padding-right: 30px;
            position: relative;
            left: 35%;
            top: 10px
        }
        .sub:focus{
            background-color:coral
        }
        button, input, select, textarea {
            font-family: inherit;
            font-size: inherit;
            line-height: inherit;
            border-radius: 12px;
        }

            input:focus {
                background-color: orange
            }

        .custom-shape-divider-top-1643630760 {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            overflow: hidden;
            line-height: 0;
            z-index: -1
        }

            .custom-shape-divider-top-1643630760 svg {
                position: relative;
                display: block;
                width: calc(149% + 1.3px);
                height: 396px;
            }

            .custom-shape-divider-top-1643630760 .shape-fill {
                fill: #ff6a00
            }



        ol, ul {
            margin-top: 33px;
            margin-bottom: 10px;
        }

        .valid {
            position: absolute;
            top: 50%;
            color: #ff0000;
            border: ridge 3px #deab7f;
            width: 19%;
            height: 30%;
            animation: mymove 5s infinite;
             font-family: 'Architects Daughter', cursive;
        }

        @@keyframes mymove {
            50% {
                box-shadow: 10px 20px 30px #ff6a00
            }
        }
    </style>

</head>
<body>
    <div class="custom-shape-divider-top-1643630760">
        <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
            <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25" class="shape-fill"></path>
            <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5" class="shape-fill"></path>
            <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z" class="shape-fill"></path>
        </svg>
    </div>
    <div class="container">
        <div class="row">
            @Html.ValidationSummary(false, "", new { @class = "valid" })

            <div class="sty">


                @using (Html.BeginForm())

                {
                    <div class="centerf">

                        <div>
                            @Html.LabelFor(x => x.FirstName, new { @class = "f1" })
                            @Html.EditorFor(x => x.FirstName)


                        </div>
                        <div>
                            @Html.LabelFor(x => x.LastName, new { @class = "f3" })
                            @Html.EditorFor(x => x.LastName)

                        </div>
                        <div>
                            @Html.LabelFor(x => x.Username, new { @class = "f5" })
                            @Html.EditorFor(x => x.Username)

                        </div>
                        <div>
                            @Html.LabelFor(x => x.Password, new { @class = "f1" })
                          
                            <input type="password" name="Password" id="Password" value="" />

                        </div>
                        <div>
                            @Html.LabelFor(x => x.Email, new { @class = "f4" })
                            @Html.EditorFor(x => x.Email)

                        </div>

                        <div>
                            @Html.LabelFor(x => x.Address1, new { @class = "f2" })
                            @Html.EditorFor(x => x.Address1)

                        </div>



                        <div>
                            @Html.LabelFor(x => x.CityId, new { @class = "f1" })
                            @Html.DropDownListFor(x => x.CityId, ViewBag.city as SelectList, null, new { @class = "f2" })
                        </div>

                        <div>
                            <!--INT NUMBER-->
                            @Html.LabelFor(x => x.Role, new { @class = "f6" })
                            @Html.EditorFor(x => x.Role, new { @class = "f2" })
                            @Html.ValidationMessageFor(x => x.Role)
                            <button type="submit" class="sub"> Register </button>
                        </div>

                    </div>


                }



            </div>








        </div>
    </div>
</body>
</html>




